@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="card">
    <div class="card-body tab-content">
        <div class="tab-pane active" id="profile">
            <h6>INFORMACJE O PROFILU</h6>
            <hr>
            <form id="profile-form" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group text-center">
                    @if (Model.Input.Avatar != null)
                    {
                        <img class="card-img" alt="Avatar" src="@Model.Input.Avatar.WebPath">
                    }
                    else
                    {
                        <img class="img-thumbnail" alt="Avatar" src="/no-avatar.png">
                    }
                </div>
                <div class="form-group">
                    <label for="formFile">Avatar</label>
                    <input asp-for="Input.File" name="File" id="formFile" class="form-control-file" type="file"/>
                </div>
                <div class="form-group">
                    <label>Nazwa użytkownika</label>
                    <input asp-for="Username" type="email" class="form-control" disabled>
                </div>
                <div class="form-group">
                    <label>Numer telefonu</label>
                    <input asp-for="Input.PhoneNumber" type="number" class="form-control">
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <button id="update-profile-button" type="submit" class="btn btn-black">Zaktualizuj profil</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


<style>
    .card-img {
        height: 300px;
        width: 50%;
        object-fit: cover;
    }
</style>

