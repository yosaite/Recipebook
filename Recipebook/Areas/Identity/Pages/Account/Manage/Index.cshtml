@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="card">
    <div class="card-body tab-content">
        <div class="tab-pane active" id="profile">
            <h6>INFORMACJE O PROFILU</h6>
            <hr>
            <form id="profile-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label>Nazwa użytkownika</label>
                    <input asp-for="Username" type="email" class="form-control" disabled >
                </div>
                <div class="form-group">
                    <label>Numer telefonu</label>
                    <input asp-for="Input.PhoneNumber" type="number" class="form-control" >
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <button id="update-profile-button" type="submit" class="btn btn-primary">Zaktualizuj profil</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}