@model IEnumerable<Recipe>
@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">Witejcie</h1> <br />
    <p>Tukej bydzie kejś fajnŏ ksiōnżka z receptami.</p>
    <p>Może niy nojlepszŏ ale jako tako.</p>
</div>
<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        @if (@item.Images.Count != 0)
                        {
                            <img class="card-img-top" alt="Card image cap" src="@item.Images.First().Path" width="250" height="250">
                        }
                        else
                        {
                            <img class="card-img-top" alt="Card image cap" src="https://kombit.net.pl/wp-content/themes/consultix/images/no-image-found-360x250.png" width="250" height="250">
                        }
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>

                            <p class="card-text">@item.Description.Substring(0,15)...</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-action="Recipe" asp-route-recipeId="@item.Id" type="button" class="btn btn-sm btn-outline-secondary">View</a>
                                </div>
                                <small class="text-muted">@item.Created</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


