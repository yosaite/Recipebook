@model Recipe
@{
    ViewData["Title"] = "Recipe";
}

<h1>@Model.Name</h1>
@if(Model.Images.Count != 0)
{
    <img src="@Model.Images.First().Path" class="rec">
}
<p>@Model.Description</p>
<h3>Składniki:</h3>
<ul>
    @foreach(var item in Model.Ingredients)
    {
        <li>@item</li>
    }
</ul>
<h3>Sposób przygotowania:</h3>
<p>@Model.Directions</p>
<p>Ocena: @Model.Rating/5</p>
<p>Dodano przez: @Model.ApplicationUser.UserName</p>

@section Styles{
    <style>
        .rec{
            height: 500px; 
            width: 70%; 
            object-fit: cover;
        }
    </style>
}



